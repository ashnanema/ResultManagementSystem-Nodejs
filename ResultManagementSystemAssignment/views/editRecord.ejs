<%- include("./partials/header") %>
<%- include("./partials/navbarl") %>

<div class="container mt-4">
    <h3 class="mb-4">Edit Result</h3>
    <form action="/teacher-view/edit-record/<%= student._id %>" method="POST">
        <div class="form-group">
            <label>Roll Number:</label>
            <input type="text" value="<%= student.rollNumber %>" name="rollNumber" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Name:</label>
            <input type="text" value="<%= student.name %>" name="name" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Date of Birth:</label>
            <input type="date" value="<%= student.dob %>" name="dob" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Score:</label>
            <input type="text" value="<%= student.score %>" name="score" class="form-control" required>
        </div>
        <input type="submit" value="Submit" class="btn btn-md btn-primary mt-4">
    </form>
    <br><br>
</div>

<%- include("./partials/footer") %>